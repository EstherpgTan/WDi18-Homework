<form action="/mountains/<%= @mountain[ "id" ] %>" method="POST" >
  <p>
    <label for="">Name: </label><input type="text" name="name" placeholder="Name of the mountain" value="<%= @mountain[ "name" ] %>"/>
  </p>
  <p>
    <label for="">Description: </label><input type="text" name="description" placeholder="Description" value="<%= @mountain[ "description" ] %>"/>
  </p>
  <p>
    <label for="">Location: </label><input type="text" name="location" placeholder="Location" value="<%= @mountain[ "location" ] %>"/>
  </p>
  <p>
    <label for="">Image: </label><input type="text" name="image" placeholder="Image" value="<%= @mountain[ "image" ] %>"/>
  </p>
  <p>
    <label for="">Height (m): </label><input type="text" name="elevation" placeholder="Height (m)" value="<%= @mountain[ "elevation" ] %>">
  </p>
  <button type="submit">Update the mountain</button>
</form>
