<form action="/mountains" method="POST" >
  <p>
    <label for="">Name: </label><input type="text" name="name" placeholder="Name of the mountain" />
  </p>
  <p>
    <label for="">Description: </label><input type="text" name="description" placeholder="Description" />
  </p>
  <p>
    <label for="">Location: </label><input type="text" name="location" placeholder="Location" />
  </p>
  <p>
    <label for="">Image: </label><input type="text" name="image" placeholder="Image" />
  </p>
  <p>
    <label for="">Height (m): </label><input type="text" name="elevation" placeholder="Height (m)">
  </p>
  <button type="submit">Add to the mountains</button>
</form>
